{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "ES2020",
    "target": "ES2015",
    "allowJs": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "alwaysStrict": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "exclude": [
    "./node_modules/",
    "./dist/",
  ],
  "include": ["src", "modules.d.ts"]
}