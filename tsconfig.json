{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "module": "ESNext",
    "target": "ES6",
    "allowJs": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "alwaysStrict": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": true,
    "paths": {
      "*": ["./src/*"],
      "@root/*": ["./*"]
    },
    "jsx": "react"
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    },
    "files": true,
    "require": ["tsconfig-paths/register"],
    "paths": {
      "*": ["./src/*"],
      "@root/*": ["./*"]
    }
  },
  "exclude": [
    "./node_modules/",
    "./dist/",
  ],
  "include": ["./src/", "./modules.d.ts"]
}